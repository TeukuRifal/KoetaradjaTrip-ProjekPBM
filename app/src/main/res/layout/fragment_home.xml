<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Card untuk Wisata Alam -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardWisataAlam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:id="@+id/Wisata"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kategori"
                    android:textSize="20sp"
                    android:textColor="@android:color/black"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="16dp"/>

                <!-- Container untuk HorizontalScrollView dan ImageView pertama -->
                <LinearLayout
                    android:id="@+id/container1"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_below="@id/Wisata"
                    android:layout_marginTop="10dp">

                    <!-- HorizontalScrollView pertama -->
                    <HorizontalScrollView
                        android:id="@+id/horizontalScrollView1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:fillViewport="true">

                        <!-- LinearLayout untuk ImageView pertama -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <!-- ImageView 1 -->
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="250dp"
                                android:layout_marginRight="10dp"
                                android:adjustViewBounds="true"
                                android:scaleType="centerCrop"
                                android:background="@drawable/rounded_background"
                                android:src="@drawable/rinjani" />

                            <!-- ImageView 2 -->
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="250dp"
                                android:layout_marginRight="10dp"
                                android:adjustViewBounds="true"
                                android:scaleType="centerCrop"
                                android:src="@drawable/rinjani" />

                            <!-- ImageView 3 -->
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="250dp"
                                android:adjustViewBounds="true"
                                android:scaleType="centerCrop"
                                android:src="@drawable/rinjani" />
                        </LinearLayout>
                    </HorizontalScrollView>
                </LinearLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cardBawah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardWisataAlam"
            android:layout_marginTop="30dp">

            <!-- LinearLayout untuk gambar horizontal -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <!-- ImageView pertama -->
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:background="@drawable/rounded_background"
                    android:src="@drawable/rinjani" />

                <!-- Teks di bawah ImageView pertama -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Homestay"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_marginEnd="8dp" />

                <!-- ImageView kedua -->
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:background="@drawable/rounded_background"
                    android:src="@drawable/rinjani" />

                <!-- Teks di bawah ImageView kedua -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Paket Wisata"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:gravity="center" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </RelativeLayout>
</ScrollView>
